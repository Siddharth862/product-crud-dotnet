@model List<Pal_Products.Models.ProductViewModel>

@{
    ViewData["Title"] = "Product List";
}

<h1>Product List</h1>

<p>
    <a asp-action="AddProduct">Add New Product</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m[0].Name)</th>
            <th>@Html.DisplayNameFor(m => m[0].Price)</th>
            <th>@Html.DisplayNameFor(m => m[0].Qty)</th>
            <th>@Html.DisplayNameFor(m => m[0].EmailAddress)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Qty</td>
                <td>@item.EmailAddress</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                    <a asp-action="DeleteProduct" asp-route-id="@item.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
